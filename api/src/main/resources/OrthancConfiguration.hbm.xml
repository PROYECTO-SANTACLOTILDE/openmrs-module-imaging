<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.imaging" auto-import="false">
    <class name="OrthancConfiguration"
        table="${project.parent.artifactId}_OrthancConfiguration">
        <id name="orthancId" type="int" column="orthancId" unsaved-value="0">
            <generator class="native" />
        </id>
        <discriminator column="orthancId" insert="false" />
        <property name="orthancBaseUrl" type="java.lang.String" column="orthancBaseUrl" length="255" unique="true" />
        <property name="orthancUsername" type="java.lang.String" column="orthancUsername" length="255" unique="true" />
        <property name="orthancPassword" type="java.lang.String" column="orthancPassword" length="255" unique="true" />
    </class>
</hibernate-mapping>