<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.imaging.api.worklist" auto-import="false">
    <class name="RequestProcedure"  table="imaging_RequestProcedure">
        <id name="id" type="int" column="id" unsaved-value="0">
            <generator class="native" />
        </id>
        <property name="status" type="java.lang.String" column="status" length="255" not-null="true"/>
        <many-to-one name="mrsPatient" column="patient_id" class="org.openmrs.Patient" not-null="true"/>
        <many-to-one name="orthancConfiguration" column="orthancConfigurationId" class="org.openmrs.module.imaging.OrthancConfiguration" not-null="true"/>
        <property name="accessionNumber" type="java.lang.String" column="accessionNumber" length="255" not-null="true" unique="true"/>
        <property name="studyInstanceUID" type="java.lang.String" column="studyInstanceUID" length="255" not-null="false" unique="true"/>
        <property name="requestingPhysician" type="java.lang.String" column="requestingPhysician" length="255" not-null="true"/>
        <property name="requestDescription" type="java.lang.String" column="requestDescription" length="255" not-null="true"/>
        <property name="priority" type="java.lang.String" column="priority" length="255" not-null="true"/>
    </class>
</hibernate-mapping>