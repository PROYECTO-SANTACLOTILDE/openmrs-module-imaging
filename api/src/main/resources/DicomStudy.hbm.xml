<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.imaging.api.study" auto-import="false">
    <class name="DicomStudy"  table="imaging_DicomStudy">
        <id name="id" type="int" column="id" unsaved-value="0">
            <generator class="native" />
        </id>
        <property name="studyInstanceUID" type="java.lang.String" column="studyInstanceUID" length="255"/>
        <property name="orthancStudyUID" type="java.lang.String" column="orthancStudyUID" length="255"/>
        <property name="patientName" type="java.lang.String" column="patientName" length="255"/>
        <property name="studyDate" type="java.lang.String" column="studyDate" length="255"/>
        <property name="studyTime" type="java.lang.String" column="studyTime" length="255"/>
        <many-to-one name="mrsPatient" column="patient_id" class="org.openmrs.Patient" not-null="false"/>
        <many-to-one name="orthancConfiguration" column="orthancConfigurationId" class="org.openmrs.module.imaging.OrthancConfiguration" not-null="true"/>
        <property name="studyDescription" type="java.lang.String" column="studyDescription" length="255"/>
        <property name="gender" type="java.lang.String" column="gender" length="100"/>
    </class>
</hibernate-mapping>